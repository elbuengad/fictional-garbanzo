{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2018",
    "lib": [
      "ES2018", "DOM"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}